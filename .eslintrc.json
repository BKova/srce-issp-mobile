{
  "extends": [ "airbnb/base" ],
  "plugins": [ "import" ],
  "settings": {
    "import/resolver": "node"
  },
  "rules": {
    "no-param-reassign": [0],
    "no-shadow": [0],
    "class-methods-use-this": [0],
    "global-require": [0],
    "no-unused-vars": [0],
    "import/no-named-default": [0]
    },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "env": {
      "browser": true,
      "node": true
  }
  },
  "parser": "babel-eslint"
}
